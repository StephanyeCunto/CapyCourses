<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.paint.*?>
<?import javafx.geometry.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.image.*?>

<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
    prefHeight="768.0" prefWidth="1366.0" stylesheets="@stylePerfil/dark/style.css"
    fx:controller="com.view.elements.Perfil.PaginaPerfil"
    styleClass="main-container" fx:id="content"
    xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="20.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="80.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="800.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>

        <VBox fx:id="sideMenu" styleClass="sideMenu" spacing="15">
        </VBox>
        <ScrollPane fitToWidth="true"
            styleClass="main-scroll"
            id="mainContent"
            GridPane.columnIndex="1">
            <content>
                <VBox spacing="30" styleClass="main-content">
                    <Hbox>
                        <HBox alignment="CENTER_LEFT" spacing="20">
                            <VBox>
                                <Label text="Configurações" styleClass="page-title" />
                                <Label text="Gerencie sua conta e preferências"
                                    styleClass="page-subtitle" />
                            </VBox>
                        </HBox>
                        <HBox alignment="TOP_RIGHT" styleClass="toggleButtonHBox"
                            HBox.hgrow="ALWAYS"
                            fx:id="toggleButtonHBox">
                            <StackPane alignment="CENTER" fx:id="toggleButtonStackPane"
                                styleClass="theme-toggle-switch" prefWidth="50" prefHeight="25">
                                <Rectangle fx:id="background" width="50" height="25"
                                    styleClass="toggle-background"
                                    arcWidth="25" arcHeight="25" />
                                <StackPane fx:id="thumbContainer" styleClass="thumb-container">
                                    <Circle fx:id="thumb" radius="12" styleClass="toggle-thumb" />
                                    <ImageView fx:id="sunIcon" fitWidth="15" fitHeight="15"
                                        visible="true" />
                                    <ImageView fx:id="moonIcon" fitWidth="15" fitHeight="15"
                                        visible="false" />
                                </StackPane>
                                <ToggleButton fx:id="toggleButton" mnemonicParsing="false"
                                    styleClass="toggle-button" />
                            </StackPane>
                        </HBox>
                    </Hbox>
                    <HBox spacing="15" style="-fx-padding: 10 0;">
                        <Button styleClass="outline-button-selection" text="Perfil"
                            fx:id="perfilBtn" />
                        <Button styleClass="outline-button-not-selection" text="Segurança"
                            fx:id="segurityBtn" />
                            fx:id="segurityBtn" />
                        <Button styleClass="outline-button-not-selection" text="Preferências"
                            fx:id="preferencesBtn" />
                        <Button styleClass="outline-button-not-selection" text="Privacidade"
                            fx:id="privacyBtn" />
                    </HBox>

                    <VBox fx:id="container"></VBox>


                    <!-- Segurança Aprimorada -->
                    <VBox spacing="25" styleClass="content-card">
                        <Label text="Segurança" styleClass="card-title" />

                        <!-- Alteração de Senha -->
                        <VBox spacing="20">
                            <Label text="Alterar Senha" styleClass="card-title" />
                            <GridPane hgap="20" vgap="15">
                                <columnConstraints>
                                    <ColumnConstraints percentWidth="33" />
                                    <ColumnConstraints percentWidth="33" />
                                    <ColumnConstraints percentWidth="33" />
                                </columnConstraints>

                                <VBox spacing="8" GridPane.columnIndex="0">
                                    <Label text="Senha Atual" styleClass="field-label" />
                                    <PasswordField styleClass="custom-text-field" />
                                </VBox>

                                <VBox spacing="8" GridPane.columnIndex="1">
                                    <Label text="Nova Senha" styleClass="field-label" />
                                    <PasswordField styleClass="custom-text-field" />
                                </VBox>
                                <VBox spacing="8" GridPane.columnIndex="2">
                                    <Label text="Confirmar Nova Senha" styleClass="field-label" />
                                    <PasswordField styleClass="custom-text-field" />
                                </VBox>
                                <rowConstraints>
                                    <RowConstraints />
                                </rowConstraints>
                            </GridPane>

                            <!-- Requisitos de Senha -->
                            <VBox spacing="5" style="-fx-padding: 10 0;">
                                <Label text="Requisitos de senha:" styleClass="card-subtitle" />
                                <Label text="• Mínimo de 6 caracteres" styleClass="card-subtitle" />

                            </VBox>
                        </VBox>

                    </VBox>

                    <!-- Preferências -->
                    <VBox spacing="25" styleClass="content-card">
                        <Label text="Preferências" styleClass="card-title" />
                        <VBox spacing="15">
                            <Label text="Tema" styleClass="card-title" />
                            <HBox spacing="15">
                                <ComboBox>
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="Claro" />
                                            <String fx:value="Escuro" />
                                            <String fx:value="Sistema" />
                                        </FXCollections>
                                    </items>
                                    <value>
                                        <String fx:value="Sistema" />
                                    </value>
                                </ComboBox>
                            </HBox>
                        </VBox>

                        <VBox spacing="15">
                            <Label text="Notificações" styleClass="card-title" />
                            <HBox alignment="CENTER_LEFT" spacing="15">
                            </HBox>
                            <VBox spacing="10">
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <CheckBox styleClass="custom-checkbox" />
                                    <Label text="Notificações por Email" styleClass="card-subtitle" />
                                </HBox>
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <CheckBox styleClass="custom-checkbox" />
                                    <Label text="Notificações Push" styleClass="card-subtitle" />
                                </HBox>
                            </VBox>
                        </VBox>
                    </VBox>

                    <!-- Privacidade -->
                    <VBox spacing="25" styleClass="content-card">
                        <Label text="Privacidade" styleClass="card-title" />


                        <!-- Consentimento de Dados -->
                        <VBox spacing="15">
                            <Label text="Consentimento de Dados" styleClass="card-title" />
                            <VBox spacing="10">
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <CheckBox styleClass="custom-checkbox" />
                                    <Label text="Permitir coleta de dados analíticos"
                                        styleClass="card-subtitle" />
                                </HBox>
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <CheckBox styleClass="custom-checkbox" />
                                    <Label text="Compartilhar dados para melhoria do serviço"
                                        styleClass="card-subtitle" />
                                </HBox>
                            </VBox>
                        </VBox>

                        <!-- Gerenciamento de Dados Pessoais -->
                        <VBox spacing="15">
                            <Label text="Gerenciamento de Dados" styleClass="card-title" />
                            <HBox spacing="15">
                                <Button styleClass="outline-button"
                                    text="Solicitar Exclusão de Conta" />
                            </HBox>
                        </VBox>

                        <!-- Informações de Privacidade -->
                        <VBox spacing="10">
                            <Label text="Última atualização da política de privacidade: 15/12/2024"
                                styleClass="card-subtitle" />
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Button styleClass="outline-button" text="Política de Privacidade" />
                                <Button styleClass="outline-button" text="Termos de Uso" />
                            </HBox>
                        </VBox>
                    </VBox>

                    <!-- Botões de Ação -->
                    <HBox alignment="CENTER_RIGHT" spacing="15" style="-fx-padding: 20 0;">
                        <Button styleClass="outline-button" text="Cancelar" />
                        <Button styleClass="modern-button" text="Salvar Alterações" />
                    </HBox>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</GridPane>