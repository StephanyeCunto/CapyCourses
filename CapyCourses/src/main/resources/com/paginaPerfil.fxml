<GridPane maxHeight="-Infinity"
    maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0"
    prefWidth="1280.0" stylesheets="@professor/style/dark/style.css"
    styleClass="main-container"
    xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="220.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="1060.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="800.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <!-- Menu Lateral -->
        <VBox fx:id="sideMenu" spacing="15"
            styleClass="side-menu">
        </VBox>

        <!-- Conteúdo Principal - Configurações Aprimoradas -->
        <ScrollPane fitToWidth="true"
            styleClass="main-scroll"
            GridPane.columnIndex="1">
            <content>
                <VBox spacing="30" styleClass="main-content">
                    <!-- Cabeçalho da Página -->
                    <HBox alignment="CENTER_LEFT" spacing="20">
                        <Circle fill="#6c63ff" radius="25">
                            <effect>
                                <DropShadow color="#6c63ff" radius="15" />
                            </effect>
                        </Circle>
                        <VBox>
                            <Label text="Configurações" styleClass="page-title" />
                            <Label text="Gerencie sua conta e preferências"
                                styleClass="page-subtitle" />
                        </VBox>
                    </HBox>

                    <!-- Menu de Navegação Rápida -->
                    <HBox spacing="15" style="-fx-padding: 10 0;">
                        <Button styleClass="modern-button" text="Perfil" />
                        <Button styleClass="outline-button" text="Segurança" />
                        <Button styleClass="outline-button" text="Preferências" />
                        <Button styleClass="outline-button" text="Privacidade" />
                    </HBox>

                    <!-- Perfil Aprimorado -->
                    <VBox spacing="25" styleClass="content-card">
                        <HBox alignment="CENTER_LEFT" spacing="20">
                            <StackPane>
                                <Circle fill="#6c63ff" radius="50" />
                                <Label text="JS" styleClass="card-title" />
                            </StackPane>
                            <VBox spacing="10">
                                <HBox spacing="15">
                                    <Button styleClass="modern-button" text="Alterar Foto" />
                                    <Button styleClass="outline-button" text="Remover" />
                                </HBox>
                                <Label text="Tamanho máximo: 5MB. Formatos: JPG, PNG"
                                    styleClass="card-subtitle" />
                            </VBox>
                        </HBox>

                        <!-- Informações Pessoais -->
                        <VBox spacing="20">
                            <Label text="Informações Pessoais" styleClass="card-title" />

<HBox spacing="20">
    <!-- Nome Completo -->
    <VBox fx:id="nomeVBox" HBox.hgrow="ALWAYS">
        <Label text="Nome Completo" styleClass="field-label" />
        <TextField styleClass="custom-text-field" text="João Silva" />
    </VBox>

    <!-- Email -->
    <VBox fx:id="emailVBox" HBox.hgrow="ALWAYS">
        <Label text="Email" styleClass="field-label" />
        <TextField styleClass="custom-text-field" text="joao.silva@email.com" />
    </VBox>

    <!-- Telefone -->
    <VBox fx:id="telefoneVBox" HBox.hgrow="ALWAYS">
        <Label text="Telefone" styleClass="field-label" />
        <TextField styleClass="custom-text-field" text="+55 (11) 99999-9999" />
    </VBox>
</HBox>
                        </VBox>


                        <!-- Bio -->
                        <VBox spacing="8">
                            <Label text="Biografia" styleClass="field-label" />
                            <TextArea styleClass="custom-text-area" wrapText="true" />
                            <Label text="Máximo de 200 caracteres" styleClass="card-subtitle" />
                        </VBox>
                    </VBox>

                    <!-- Segurança Aprimorada -->
                    <VBox spacing="25" styleClass="content-card">
                        <Label text="Segurança" styleClass="card-title" />

                        <!-- Alteração de Senha -->
                        <VBox spacing="20">
                            <Label text="Alterar Senha" styleClass="card-title" />
                            <GridPane hgap="20" vgap="15">
                                <columnConstraints>
                                    <ColumnConstraints percentWidth="33" />
                                    <ColumnConstraints percentWidth="33" />
                                    <ColumnConstraints percentWidth="33" />
                                </columnConstraints>

                                <VBox spacing="8" GridPane.columnIndex="0">
                                    <Label text="Senha Atual" styleClass="field-label" />
                                    <PasswordField styleClass="custom-text-field" />
                                </VBox>

                                <VBox spacing="8" GridPane.columnIndex="1">
                                    <Label text="Nova Senha" styleClass="field-label" />
                                    <PasswordField styleClass="custom-text-field" />
                                </VBox>
                                <VBox spacing="8" GridPane.columnIndex="2">
                                    <Label text="Confirmar Nova Senha" styleClass="field-label" />
                                    <PasswordField styleClass="custom-text-field" />
                                </VBox>
                                <rowConstraints>
                                    <RowConstraints />
                                </rowConstraints>
                            </GridPane>

                            <!-- Requisitos de Senha -->
                            <VBox spacing="5" style="-fx-padding: 10 0;">
                                <Label text="Requisitos de senha:" styleClass="card-subtitle" />
                                <Label text="• Mínimo de 6 caracteres" styleClass="card-subtitle" />

                            </VBox>
                        </VBox>

                    </VBox>

                    <!-- Preferências -->
                    <VBox spacing="25" styleClass="content-card">
                        <Label text="Preferências" styleClass="card-title" />
                        <VBox spacing="15">
                            <Label text="Tema" styleClass="card-title" />
                            <HBox spacing="15">
                                <ComboBox>
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="Claro" />
                                            <String fx:value="Escuro" />
                                            <String fx:value="Sistema" />
                                        </FXCollections>
                                    </items>
                                    <value>
                                        <String fx:value="Sistema" />
                                    </value>
                                </ComboBox>
                            </HBox>
                        </VBox>

                        <VBox spacing="15">
                            <Label text="Notificações" styleClass="card-title" />
                            <HBox alignment="CENTER_LEFT" spacing="15">
                            </HBox>
                            <VBox spacing="10">
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <CheckBox styleClass="custom-checkbox" />
                                    <Label text="Notificações por Email" styleClass="card-subtitle" />
                                </HBox>
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <CheckBox styleClass="custom-checkbox" />
                                    <Label text="Notificações Push" styleClass="card-subtitle" />
                                </HBox>
                            </VBox>
                        </VBox>
                    </VBox>

                    <!-- Privacidade -->
                    <VBox spacing="25" styleClass="content-card">
                        <Label text="Privacidade" styleClass="card-title" />


                        <!-- Consentimento de Dados -->
                        <VBox spacing="15">
                            <Label text="Consentimento de Dados" styleClass="card-title" />
                            <VBox spacing="10">
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <CheckBox styleClass="custom-checkbox" />
                                    <Label text="Permitir coleta de dados analíticos"
                                        styleClass="card-subtitle" />
                                </HBox>
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <CheckBox styleClass="custom-checkbox" />
                                    <Label text="Compartilhar dados para melhoria do serviço"
                                        styleClass="card-subtitle" />
                                </HBox>
                            </VBox>
                        </VBox>

                        <!-- Gerenciamento de Dados Pessoais -->
                        <VBox spacing="15">
                            <Label text="Gerenciamento de Dados" styleClass="card-title" />
                            <HBox spacing="15">
                                <Button styleClass="outline-button"
                                    text="Solicitar Exclusão de Conta" />
                            </HBox>
                        </VBox>

                        <!-- Informações de Privacidade -->
                        <VBox spacing="10">
                            <Label text="Última atualização da política de privacidade: 15/12/2024"
                                styleClass="card-subtitle" />
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Button styleClass="outline-button" text="Política de Privacidade" />
                                <Button styleClass="outline-button" text="Termos de Uso" />
                            </HBox>
                        </VBox>
                    </VBox>

                    <!-- Botões de Ação -->
                    <HBox alignment="CENTER_RIGHT" spacing="15" style="-fx-padding: 20 0;">
                        <Button styleClass="outline-button" text="Cancelar" />
                        <Button styleClass="modern-button" text="Salvar Alterações" />
                    </HBox>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</GridPane>