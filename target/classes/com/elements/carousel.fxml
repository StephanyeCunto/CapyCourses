<VBox fx:id="featuredCourseSection" fx:controller="com.view.elements.Carousel"
    xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1">
    <HBox spacing="20" alignment="CENTER">
        <Button fx:id="leftButton"
            style="-fx-min-width: 50; -fx-min-height: 50; -fx-max-width: 50; -fx-max-height: 50; -fx-padding: 0; -fx-background-color: transparent; -fx-border-color: transparent;">
            <graphic>
                <ImageView rotate="180" fx:id="leftButtonImage">
                    <Image url="@../icons/seta-carrosel.png" />
                </ImageView>
            </graphic>
            <HBox.margin>
                <Insets top="50.0" />
            </HBox.margin>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <VBox fx:id="rigthContainer" alignment="CENTER">
        </VBox>
        <Button fx:id="rigthButton"
            style="-fx-min-width: 50; -fx-min-height: 50; -fx-max-width: 50; -fx-max-height: 50; -fx-padding: 0; -fx-background-color: transparent; -fx-border-color: transparent;">
            <graphic>
                <ImageView fx:id="rightButtonImage">
                    <Image  url="@../icons/seta-carrosel.png" />
                </ImageView>
            </graphic>
            <HBox.margin>
                <Insets top="50.0" />
            </HBox.margin>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <HBox fx:id="indicator">
            <HBox.margin>
                <Insets top="140.0" />
            </HBox.margin>
        </HBox>
    </HBox>
</VBox>