<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ComboBox?>

<StackPane fx:id="container" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" stylesheets="@style/style.css"
    fx:controller="com.view.login_cadastro.Cadastro">
    <GridPane fx:id="mainPane" alignment="CENTER"
        StackPane.alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0" />
            <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <children>
            <VBox fx:id="leftSection" alignment="CENTER" style="-fx-background-radius: 20 0 0 20;">
                <ImageView fitHeight="452.0" fitWidth="513.0" pickOnBounds="true"
                    preserveRatio="true">
                    <image>
                        <Image url="@img/capyCourses.png" />
                    </image>
                </ImageView>
            </VBox>
            <VBox fx:id="rightSection" alignment="CENTER" spacing="20" style="-fx-padding: 40;"
                GridPane.columnIndex="1">
                <Label text="DADOS COMPLEMENTARES" textFill="WHITE">
                    <font>
                        <Font name="Franklin Gothic Medium" size="30.0" />
                    </font>
                </Label>
                <VBox spacing="8">
                    <Label text="DATA DE NASCIMENTO" textFill="#ffffff80">
                        <font>
                            <Font name="Franklin Gothic Medium" size="14.0" />
                        </font>
                    </Label>
                    <DatePicker fx:id="datePicker"
                        styleClass="date-picker"
                        prefHeight="45.0"
                        prefWidth="Infinity">
                        <VBox.margin>
                            <Insets top="4" bottom="4" />
                        </VBox.margin>
                    </DatePicker>
                </VBox>
                <VBox spacing="8">
                    <Label text="CPF" textFill="#ffffff80">
                        <font>
                            <Font name="Franklin Gothic Medium" size="14.0" />
                        </font>
                    </Label>
                    <TextField fx:id="textFieldCPF" prefHeight="45.0"
                        style="-fx-background-color: rgba(255, 255, 255, 0.08); -fx-background-radius: 12; -fx-border-color: rgba(255, 255, 255, 0.1); -fx-border-radius: 12; -fx-text-fill: white; -fx-prompt-text-fill: rgba(255, 255, 255, 0.5);">
                        <font>
                            <Font name="Franklin Gothic Medium" size="14.0" />
                        </font>
                    </TextField>
                </VBox>
                <VBox spacing="8">
                    <Label text="TELEFONE" textFill="#ffffff80">
                        <font>
                            <Font name="Franklin Gothic Medium" size="14.0" />
                        </font>
                    </Label>
                    <TextField fx:id="textFieldPhone" prefHeight="45.0"
                        style="-fx-background-color: rgba(255, 255, 255, 0.08); -fx-background-radius: 12; -fx-border-color: rgba(255, 255, 255, 0.1); -fx-border-radius: 12; -fx-text-fill: white; -fx-prompt-text-fill: rgba(255, 255, 255, 0.5);">
                        <font>
                            <Font name="Franklin Gothic Medium" size="14.0" />
                        </font>
                    </TextField>
                </VBox>
                <VBox spacing="8">
                    <Label text="NÍVEL DE ESCOLARIDADE" textFill="#ffffff80">
                        <font>
                            <Font name="Franklin Gothic Medium" size="14.0" />
                        </font>
                    </Label>
                    <ComboBox fx:id="comboBoxEducation" prefHeight="45.0" prefWidth="Infinity"
                        style="-fx-background-color: rgba(255, 255, 255, 0.08); -fx-background-radius: 12; -fx-border-color: rgba(255, 255, 255, 0.1); -fx-border-radius: 12;" />
                </VBox>
                <VBox spacing="8">
                    <Label text="ÁREA DE INTERESSE" textFill="#ffffff80">
                        <font>
                            <Font name="Franklin Gothic Medium" size="14.0" />
                        </font>
                    </Label>
                    <ComboBox fx:id="comboBoxInterest" prefHeight="45.0" prefWidth="Infinity"
                        style="-fx-background-color: rgba(255, 255, 255, 0.08); -fx-background-radius: 12; -fx-border-color: rgba(255, 255, 255, 0.1); -fx-border-radius: 12;" />
                </VBox>
                <Button maxWidth="Infinity" styleClass="modern-button" text="FINALIZAR CADASTRO">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Button>
                <HBox alignment="CENTER">
                    <Label text="Já possui uma conta? " textFill="WHITE">
                        <font>
                            <Font name="Franklin Gothic Medium" size="14.0" />
                        </font>
                    </Label>
                    <Hyperlink style="-fx-text-fill: #6c63ff; -fx-border-color: transparent;"
                        text="Fazer login" fx:id="logar">
                        <font>
                            <Font name="Franklin Gothic Medium" size="12.0" />
                        </font>
                    </Hyperlink>
                </HBox>
            </VBox>
        </children>
    </GridPane>
</StackPane>